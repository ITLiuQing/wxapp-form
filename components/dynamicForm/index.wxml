<!--components/dynamicForm/index.wxml-->
<view class="form-box">
  <block wx:for="{{formData}}" wx:key="id">
    <view class="form-row ipt-row {{item.disabled?'disable':''}" wx:if="{{item.type==='input'}}">
      <view class="form-lable {{item.isRequired?'required':'' +''}}">{{item.lable}}</view>
      <view style="width:100%">
        <input class="field" type="text" maxlength="{{item.maxLength || -1}}" bindinput="onInput" id="{{item.id}}" value="{{item.defaultValue || ''}}" disabled="{{item.disabled}}" placeholder="{{inputMap[item.id].placeholder || '请填写内容'}}"
        />
        <view class="error-info" wx:if="{{inputMap[item.id].error}}">{{inputMap[item.id].error}}</view>
      </view>
      
    </view>
    <view class="form-row {{item.isRequired?'required':''}} {{item.disabled?'disable':''}" wx:elif="{{item.type==='picker'}}">
      <view class="form-lable">{{item.lable}}</view>
      <picker class="field" range="{{item.range}}" id="{{item.id}}" value="{{pickerMap[item.id].idx}}" range-key="name" bindchange="onPickerChange" >
        {{item.range[pickerMap[item.id].idx].name}}
      </picker>
      <van-icon class="row-icon" name="arrow"></van-icon>
    </view>
    <view class="form-row {{item.isRequired?'required':''}} {{item.disabled?'disable':''}" wx:elif="{{item.type==='date'}}">
      <view class="form-lable">{{item.lable}}</view>
      <view class="field" bindtap="datePickerShow" data-id="{{item.id}}">{{dateMap[item.id].config.endDate?dateMap[item.id].startDate+' ~ ' + dateMap[item.id].endDate: dateMap[item.id].startDate}}</view>
      <time-picker pickerShow="{{dateMap[item.id].show}}" id="{{item.id}}" wx:if="{{!isPickerRender}}" bind:hidePicker="datePickerHide" bind:setPickerTime="setPickerTime"
        config="{{dateMap[item.id].original.config}}"></time-picker>
      <van-icon class="row-icon" name="arrow"></van-icon>
    </view>
    <view class="textarea-box {{item.disabled?'disable':''}" wx:elif="{{item.type==='textarea'}}">
      <view class="flex mb-24">
        <view class="area-lable {{item.isRequired?'required':''}}">{{item.lable}}</view>
        <view class="error-info" wx:if="{{inputMap[item.id].error}}">{{inputMap[item.id].error}}</view>
      </view>
      <view class="text-area">
        <textarea style="width:100%" value="{{item.defaultValue || null}}" placeholder="{{inputMap[item.id].placeholder || '请填写内容'}}" id="{{item.id}}" bindinput="onInput" auto-height="{{true}}" maxlength="{{item.maxLength}}" name="" cols="30" rows="10"></textarea>
        <view class="text-num">{{inputMap[item.id].value.length||0}}/{{item.maxLength}}</view>
      </view>
    </view>
    <view class="img-box" wx:elif="{{item.type==='image'}}">
      <!-- <view class="area-lable mb-24 {{item.isRequired?'required':''}}">{{item.lable}}</view> -->
      <view class="flex mb-24">
        <view class="area-lable {{item.isRequired?'required':''}}">{{item.lable}}</view>
        <view class="error-info" wx:if="{{fileMap[item.id].error}}">{{fileMap[item.id].error}}</view>
      </view>
      <van-uploader file-list="{{ fileMap[item.id].list }}" preview-size="216rpx" max-count="4" disabled="{{false}}" accept="all" id="{{item.id}}" multiple image-fit="aspectFill" bind:after-read="onFileRead" bind:delete="onFileDelete"/>
    </view>
  </block>
</view>

<button class='form-btn' bindtap="formSubmit">提交</button>